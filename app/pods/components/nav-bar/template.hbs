<div class="row c-topnav py-3 justify-content-between">
  <div class="col-6 px-0 d-md-none d-block">
    <div class="d-flex align-items-center ml-3">
      <div class="hamburger-menu mr-3">
        <div class="ham-toggle">
          <div class="hamburger" {{action 'toggleHamburgerNav'}}>
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
      </div>
      {{!-- <span class="font-sm">Hacker<strong> Blocks</strong></span> --}}
    </div>
  </div>
  <div class="col-6 d-md-block d-none">
    <ul>
      <li>
        <LinkTo class="navbar-brand bold font-md black" @route="index">
          <!-- <img src="https://minio.codingblocks.com/amoeba/hellointern.svg" class="d-inline-block align-top" alt /> -->
          Coding Blocks | <span class="gradient-red">Hire</span>
        </LinkTo>
      </li>
    </ul>
  </div>
  <div class="align-items-center">
    <ul class="right-nav">
      <li class="top-nav-option px-3 mt-2 d-none d-md-block">
        <a href="https://online.codingblocks.com/courses" target="blank">Courses</a>
      </li>
      <li class="top-nav-option px-3 mt-2 d-none d-md-block">
        <a href="https://codingblocks.com/campus-ambassador-program.html" target="blank">Campus Ambassadors</a>
      </li>
      <li class="top-nav-option px-3 mt-2 d-none d-md-block">
        <a href="https://codingblocks.com/about.html" target="blank">About Us</a>
      </li>
      <li class="top-nav-option px-3 mt-2 d-none d-md-block">
        <a href="https://codingblocks.com/centres/" target="blank">Contact Us</a>
      </li>
      <li class="top-nav-option hoverable px-3 d-md-block d-none">
        {{#if session.isAuthenticated}}
        <div class="img-desc align-items-center font-sm pt-1">
          <img class="round s-30x30" src="{{if currentUser.user.photo currentUser.user.photo '/images/user.svg'}}" alt="Profile Pic">
          <div class="description ml-3">
            Hi, {{currentUser.user.firstname}}
          </div>
        </div>
        <div class="pop-up border-card p-3 br-5">
          <ul class="t-align-l">
            <li>
              {{#link-to "users.id" currentUser.user.id}}Profile{{/link-to}}
            </li>
            <div class="divider-h my-3"></div>
            <li>
              <a class="dark-grey" href={{logoutLink}}>
                Logout
              </a>
            </li>
          </ul>
        </div>
        {{else}}
        <LoginButton />
        {{/if}}
      </li>
    </ul>
  </div>
</div>