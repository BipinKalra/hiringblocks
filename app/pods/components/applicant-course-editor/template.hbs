<div class="border-card">
  <h5 class="mb-4">Add New Course</h5>

  <PowerSelect class="mb-4" 
    @options={{organizations}} 
    @selected={{editingRecord.organizationTypeSetter}}
    @placeholder={{"Select Organization"}} 
    @onChange={{action (mut editingRecord.organizationTypeSetter)}} as |organization|>
    {{organization}}
  </PowerSelect>

  <div class="my-4"></div>

  {{#if isCBOnlineCourse}}
    <PowerSelect class="mb-4" 
      @options={{onlineCourses}} 
      @searchEnabled={{true}}
      @searchField={{"title"}}
      @selected={{selectedOnlineCourse}}
      @placeholder={{"Select Course"}}
      @onChange={{action 'setOnlineCourse'}} as |onlineCourse|>
      <span onclick="{{action 'setOnlineCourse' onlineCourse}}">{{onlineCourse.title}}</span>
    </PowerSelect>
  {{else}}
    <Input class="input-text mb-4" 
      @type="text" 
      @value={{editingRecord.organizationName}} 
      @required={{true}}
      @placeholder="Organization Name" />

    <PowerSelect class="mb-4" 
      @options={{courseTypes}} 
      @searchEnabled={{true}} 
      @searchField={{"title"}}
      @selected={{editingRecord.name}}
      @placeholder={{"Select Course Type"}} 
      @onChange={{action 'setCourseType'}} as |courseType|>
      {{courseType.title}}
    </PowerSelect>

    <div class="mt-4">
      <span class="bold">Course Type:</span>
    
      <input class="mb-4 ml-3" type="radio" 
        name="course_type" 
        checked={{eq editingRecord.courseMode 'online'}}
        onclick={{action (mut editingRecord.courseMode) 'online'}} 
        required={{true}} />
      Online
      <input class="mb-4" type="radio" 
        name="course_type" 
        checked={{eq editingRecord.courseMode 'offline'}}
        onclick={{action (mut editingRecord.courseMode) 'offline'}} 
        required={{true}} />
      Offline
    </div>
  {{/if}}

  <Input 
    class="input-text my-4" 
    @type="text" 
    @value={{editingRecord.certificateLink}} 
    @required={{true}}
    @placeholder="Certificate Link"/>

  <PikadayInput 
    class="input-text mb-4"
    @placeholder="Start Date"
    @value={{editingRecord.startDateString}}
    @onSelection={{action (mut editingRecord.startDateString)}} />

  <PikadayInput 
    class="input-text mb-4"
    @placeholder="End Date"
    @value={{editingRecord.startDateString}}
    @onSelection={{action (mut editingRecord.endDateString)}} />

  <button class="button-solid button-orange mt-4" {{action 'saveRecord'}}>Add Course</button>
</div>